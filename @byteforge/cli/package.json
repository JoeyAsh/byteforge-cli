{
  "name": "@byteforge/cli",
  "description": "A new CLI generated with oclif",
  "version": "0.0.0",
  "author": "Johannes Aschenbrenner",
  "bin": {
    "bforge": "./bin/run.js"
  },
  "bugs": "https://github.com/@byteforge/cli/issues",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "dev": "tsc -b --watch",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "create:project": "shx rm -rf ../../tmp/* && cd ../../tmp && node ../@byteforge/cli/bin/run.js create test-project --yes",
    "create:app": "shx rm -rf ../../tmp/* && cd ../../tmp && node ../@byteforge/cli/bin/run.js create test-project --yes && cd test-project && node ../../@byteforge/cli/bin/run.js create:app TestApp",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "fs-extra": "^11.3.2",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "@types/prompts": "^2.4.9",
    "chai": "^4",
    "prettier": "^3.6.2",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/@byteforge/cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "oclif": {
    "bin": "bforge",
    "dirname": "bforge",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "repository": "@byteforge/cli",
  "types": "dist/index.d.ts"
}
